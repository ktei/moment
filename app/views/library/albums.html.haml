%h2 Library
.row
  .columns.large-3.small-12
    = render 'library/nav'
  .columns.large-9.small-12
    - if @album.nil?
      = render 'shared/alert_box', :type => :secondary, :message => 'No album is found.'
    - else
      %ul.small-block-grid-2.large-block-grid-3
        - @album.photos.each do |photo|
          %li
            = link_to("#") do
              = image_tag(photo.image.url(:thumb))